{% set softwareSectionLogo = 'fa-cubes' %}

{% extends 'base.html.twig' %}

{% block title %}
Domain Registrar Accounts
{% endblock %}

{% block breadcrumbs %}
<li class="breadcrumb-item"><a href="{{ path('asset') }}">Assets</a></li>
<li class='breadcrumb-item active'>Registrar Accounts</li>
{% endblock %}

{% block body %}
<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-body">
				Below is a list of all the Domain Registrar Accounts that are stored
				in DomainMOD. <br> <br> <a
					href="{{ path('registrar_account_new') }}">{{ _self.showButton('button','Add Registrar Account') }}</a>
				<a href="{{ path('registrar_account_export') }}">{{ _self.showButton('button','Export') }}</a>
				<br> <br>
				{% if registrar_accounts|length > 0 %}
				<table id="assets-registrar-accounts"
					class="table table-striped dt-responsive cell-border compact">
					<thead>
						<tr>
							<th width="20px"></th>
							<th>Registrar</th>
							<th>Account</th>
							<th>Owner</th>
							<th>Domains</th>
						</tr>
					</thead>
					<tbody>
						{% for registrar_account in registrar_accounts %}
						<tr>
							<td></td>
							<td><a
								href="{{ path('registrar_edit', { id: registrar_account.registrar.id }) }}">{{ registrar_account.registrar }}</a>
							</td>

							<td><a
								href="{{ path('registrar_account_edit', { id: registrar_account.id }) }}">{{ registrar_account.username }}</a>
								{% if defaultRegistrarAccount == registrar_account %} <strong>*</strong>
								{% endif %} {% if registrar_account.reseller %} <strong>^</strong>
								{% endif %}</td>

							<td><a href="{{ path('owner_edit', { id: registrar_account.owner.id }) }}">{{ registrar_account.owner }}</a></td>

							<td>{% if registrar_account.getActiveDomainCount > 0 %} <a
								href="{{ path('domain_index', { 'domain_filter[account]': registrar_account.id }) }}">{{ registrar_account.getActiveDomainCount }}</a>
								{% else %} - {% endif %}</td>
						</tr>
						{% endfor %}
					</tbody>
				</table>
				<strong>*</strong> = Default ( <a href="{{ path('settings_defaults') }}">set
					defaults</a> )&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <strong>^</strong> =
				Reseller <br> <br>
				{% else %}
				<br> You don't currently have any Registrar Accounts. <a
					href="{{ path('registrar_account_new') }}">Click here to add
					one</a> . <br>
				{% endif %}
			</div>
		</div>
	</div>
</div>
{% endblock %}

{% block stylesheets %}
	<style>
		#assets-registrar-accounts thead th {
			padding: 2px 0px 2px 6px;
			border: 0;
			white-space: nowrap;
		}

		#assets-registrar-accounts tbody tr:hover {
			background-color: #dddddd;
		}

		#assets-registrar-accounts tbody td {
			padding: 2px 0px 2px 6px;
			border: 0;
			white-space: nowrap;
		}
	</style>
{% endblock %}

{% block datatable_options %}
	$('#assets-registrar-accounts').DataTable({
	    'pageLength': 25
	});
{% endblock %}
