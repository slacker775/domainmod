{% extends 'base.html.twig' %}

{% block title %}
    Account Owners
{% endblock %}

{% block page_content %}
    {% embed '@AdminLTE/Widgets/card-widget.html.twig' %}
        {% from "@AdminLTE/Macros/buttons.html.twig" import link_button %}

        {% block card_body %}
            Below is a list of all the Account Owners that are stored in
            DomainMOD. <BR> <BR>

            {{ link_button('Add Owner', path('owner_new')) }}
            {{ link_button('Export', path('owner_export')) }}

            <BR> <BR>

            {% if owners %}
                <table id="assets-owners"
                       class="table table-striped dt-responsive cell-border compact">
                    <thead>
                    <tr>
                        <th style="width: 20px"></th>
                        <th>Owners</th>
                        <th>Registrar Accounts</th>
                        <th>Domains</th>
                        <th>SSL Accounts</th>
                        <th>SSL Certs</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for owner in owners %}
                        <tr>
                            <td></td>
                            <td><a href="{{ path('owner_edit', {'id': owner.id}) }}">{{ owner.name }}</a>
                                {% if owner.id == app.user.settings.defaultOwnerDomains.id|default(false) %}
                                    * {% endif %} {% if owner.id == app.user.settings.defaultOwnerSsl.id|default(false) %}
                                    ^ {% endif %}</td>
                            <td>
                                <a href="{{ path('registrar_account_index', { owner: owner.id }) }}">{{ owner.registrarAccounts|length ?: '-' }}</a>
                            </td>
                            <td>
                                <a href="{{ path('domain_index', { 'domain_filter[owner]': owner.id }) }}">{{ owner.domains|length ?: '-' }}</a>
                            </td>
                            <td>
                                <a href="{{ path('ssl_account_index', { owner: owner.id }) }}">{{ owner.sslAccounts|length ?: '-' }}</a>
                            </td>
                            <td>
                                <a href="{{ path('ssl_cert_index', { 'ssl_cert_filter[owner]': owner.id }) }}">{{ owner.sslCerts|length ?: '-' }}</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <strong>*</strong> = Default Domain Owner
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <strong>^</strong> = Default SSL
                Owner ( <a
                    href="{{ path('settings_defaults') }}">set defaults</a> )
                <BR> <BR>

            {% else %}
                <BR> You don't currently have any Owners. <a
                    href="{{ path('owner_new') }}">Click here to add one</a> .
            {% endif %}
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block stylesheets %}
    <style>
        #assets-owners thead th {
            padding: 2px 0px 2px 6px;
            border: 0;
            white-space: nowrap;
        }

        #assets-owners tbody tr:hover {
            background-color: #dddddd;
        }

        #assets-owners tbody td {
            padding: 2px 0px 2px 6px;
            border: 0;
            white-space: nowrap;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('datatables') }}
    <script>
        $(function () {
            $('#assets-owners').DataTable({});
        });
    </script>
{% endblock %}
