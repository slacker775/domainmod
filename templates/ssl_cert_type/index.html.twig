{% set softwareSectionLogo = 'fa-cubes' %}

{% extends 'base.html.twig' %}

{% block title %}SSL Certificate Types{% endblock %}

{% block breadcrumbs %}
<li class="breadcrumb-item"><a href="{{ path('asset') }}">Assets</a></li>
<li class='breadcrumb-item active'>SSL Types</li>
{% endblock %}

{% block body %}
<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-body">
				Below is a list of all the SSL Certificates Types that are stored in
				DomainMOD.<BR>
				<BR> <a href="{{ path('ssl_cert_type_new') }}">{{ _self.showButton('button','Add SSL Type') }}</a>
				<a href="{{ path('ssl_cert_type_export') }}">{{ _self.showButton('button','Export') }}</a><BR>
				<BR>

				{% if ssl_cert_types %}
				<table id="assets-ssl-types"
					class="table table-striped dt-responsive cell-border compact">
					<thead>
						<tr>
							<th width="20px"></th>
							<th>Type</th>
							<th>SSL Certs</th>
						</tr>
					</thead>
					<tbody>
						{% for ssl_cert_type in ssl_cert_types %}
						<tr>
							<td></td>
							<td><a
								href="{{ path('ssl_cert_type_edit', { id: ssl_cert_type.id }) }}">{{ ssl_cert_type.type }}</a>
								{% if ssl_cert_type.id == app.user.settings.defaultSslType.id|default(false) %}*{% endif %}
							</td>
							<td><a href="{{ path('ssl_cert_index', { 'ssl_cert_filter[type]': ssl_cert_type.id }) }}">{{ ssl_cert_type.sslCerts|length ?: '-' }}</a></td>
						</tr>
						{% endfor %}
					</tbody>
				</table>
				<strong>*</strong> = Default (<a
					href="{{ path('settings_defaults') }}">set defaults</a>)<BR>
				<BR>
				{% else %}
				<BR>You don't currently have any SSL Types. <a
					href="{{ path('ssl_cert_type_new') }}">Click here to add one</a>.
				{% endif %}
			</div>
		</div>
	</div>
</div>
{% endblock %}

{% block stylesheets %}
<style>
#assets-ssl-types thead th { padding: 2px 0px 2px 6px; border: 0; white-space: nowrap; }
#assets-ssl-types tbody tr:hover { background-color: #dddddd; }
#assets-ssl-types tbody td { padding: 2px 0px 2px 6px; border: 0; white-space: nowrap; }
</style>
{% endblock %}

{% block datatable_options %}
$('#assets-ssl-types').DataTable();
{% endblock %}