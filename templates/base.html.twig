{% macro breadcrumb(section, position) %}
      <ol class="breadcrumb pull-{{ position }}">
          {% if section == 'dashboard' %}
              <li><i class="fa fa-dashboard"></i></li>
          {% else %}
              <li><a href="{{ path('home') }}"><i class="fa fa-dashboard"></i></a></li>
          {% endif %}
      </ol>
{% endmacro %}

{% macro showButton(type, text) %}
<button style="margin-top:5px" type="{{ type }}" class="btn btn-primary btn-danger">{{ text }}</button>&nbsp;
{% endmacro %}

{% macro highlightText(color, text) %}
<strong><span style="color: {{ color == 'red' ? '#a30000' : '#009933' }}">{{ text }}</span></strong>
{% endmacro %}