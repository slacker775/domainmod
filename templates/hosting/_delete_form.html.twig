<form method="post" action="{{ path('hosting_delete', {'id': hosting.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ hosting.id) }}">
    <button style="margin-top:5px" class="btn btn-primary btn-secondary">DELETE THIS WEB HOST</button>
</form>
