{% extends 'base.html.twig' %}

{% block title %}Hosting{% endblock %}

{% block body %}
    <h1>Hosting</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hosting.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ hosting.name }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ hosting.url }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ hosting.notes }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ hosting.created ? hosting.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ hosting.updated ? hosting.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('hosting_index') }}">back to list</a>

    <a href="{{ path('hosting_edit', {'id': hosting.id}) }}">edit</a>

    {{ include('hosting/_delete_form.html.twig') }}
{% endblock %}
