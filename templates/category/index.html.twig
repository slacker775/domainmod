{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block page_content %}
    {% embed '@AdminLTE/Widgets/card-widget.html.twig' %}
        {% from "@AdminLTE/Macros/buttons.html.twig" import link_button %}

        {% block card_body %}
            Below is a list of all the Categories that are stored in DomainMOD.<BR>
            <BR>

            {{ link_button('Add Category', path('category_new')) }}
            {{ link_button('Export', path('category_export')) }}

            <BR>
            <BR>

            {% if categories %}
                <table id="assets-categories"
                       class="table table-striped dt-responsive cell-border compact">
                    <thead>
                    <tr>
                        <th style="width: 20px"></th>
                        <th>Category</th>
                        <th>Stakeholder</th>
                        <th>Domains</th>
                        <th>SSL Certs</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <td></td>
                            <td><a
                                        href="{{ path('category_edit', { id: category.id }) }}">{{ category.name }}</a>
                                {% if category.id == app.user.settings.defaultCategoryDomains.id|default(false) %}*{% endif %}
                                {% if category.id == app.user.settings.defaultCategorySsl.id|default(false) %}^{% endif %}
                            </td>
                            <td><a
                                        href="{{ path('category_edit', { id: category.id }) }}">{{ category.stakeholder }}</a>
                            </td>
                            <td>
                                <a href="{{ path("domain_index", { 'domain_filter[category]': category.id }) }}">{{ category.domains|length ?: '-' }}</a>
                            </td>
                            <td>{{ category.sslCerts|length ?: '-' }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <strong>*</strong> = Default Domain Owner
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<strong>^</strong> = Default SSL Owner
                (<a href="{{ path('settings_defaults') }}">set defaults</a>)<BR>
                <BR>

            {% else %}
                <BR>You don't currently have any Categories. <a
                    href="{{ path('category_new') }}">Click here to add one</a>.
            {% endif %}
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('datatables') }}
    <script>
        $('#assets-categories').DataTable({});
    </script>
{% endblock %}
