{% extends 'base.html.twig' %}

{% block title %}
    IP Addresses
{% endblock %}

{% block page_content %}
    {% embed '@AdminLTE/Widgets/card-widget.html.twig' %}
        {% from "@AdminLTE/Macros/buttons.html.twig" import link_button %}

        {% block card_body %}
            Below is a list of all the IP Addresses that are stored in
            DomainMOD. <BR> <BR>

            {{ link_button('Add IP Address', path('ip_address_new')) }}
            {{ link_button('Export', path('ip_address_export')) }}

            <BR> <BR>

            {% if ip_addresses %}
                <table id="assets-ip-addresses"
                       class="table table-striped dt-responsive cell-border compact">
                    <thead>
                    <tr>
                        <th style="width: 20px"></th>
                        <th>Name</th>
                        <th>IP Address</th>
                        <th>rDNS</th>
                        <th>Domains</th>
                        <th>SSL Certs</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ip_address in ip_addresses %}
                        <tr>
                            <td></td>
                            <td><a
                                        href="{{ path('ip_address_edit', { id: ip_address.id }) }}">{{ ip_address.name }}</a>
                                {% if ip_address.id == app.user.settings.defaultIpAddressDomains.id|default(false) %}*{% endif %}
                                {% if ip_address.id == app.user.settings.defaultIpAddressSsl.id|default(false) %}^{% endif %}
                            </td>
                            <td><a
                                        href="{{ path('ip_address_edit', { id: ip_address.id }) }}">{{ ip_address.ip }}</a>
                            </td>
                            <td><a
                                        href="{{ path('ip_address_edit', { id: ip_address.id }) }}">{{ ip_address.rdns }}</a>
                            </td>
                            <td><a
                                        href="{{ path('domain_index', { 'domain_filter[ip]': ip_address.id }) }}">{{ ip_address.domains|length ?: '-' }}</a>
                            </td>
                            <td><a
                                        href="{{ path('ssl_cert_index', { 'ssl_cert_filter[ip]': ip_address.id }) }}">{{ ip_address.sslCerts|length ?: '-' }}</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <strong>*</strong> = Default Domain Owner
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <strong>^</strong> = Default SSL
                Owner ( <a href="{{ path('settings_defaults') }}">set defaults</a> )
                <BR> <BR>

            {% else %}
                <BR> You don't currently have any IP Addresses. <a
                    href="{{ path('ip_address_new') }}">Click here to add one</a> .
            {% endif %}
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('datatables') }}
    <script>
        $('#assets-ip-addresses').DataTable({});
    </script>
{% endblock %}